{
  "dataset_reader": {
    "type": "modalitylite",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true,
        "token_min_padding_length": 5
      }
    },
    "wiki_tokenizer": {
      "type":"word",
      "word_splitter": {
        "type": "just_spaces"
      }
    },
    "sentence_tokenizer": {
      "type":"word",
      "word_splitter": {
        "type": "simple"
      }
    }
  },
  "train_data_path": "data/EPOS_E/dtrain.jsonl",
  "validation_data_path": "data/EPOS_E/validation.jsonl",
  "test_data_path": "data/EPOS_E/test.jsonl",
  "evaluate_on_test": true,
  "model": {
    "type": "basic_classifier",
    "seq2vec_encoder": {
    "type": "cnn",
    "embedding_dim": 300,
    "num_filters": 100,
    "ngram_filter_sizes": [3,4,5]
    },
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "/home/nlp/shovalsa/modality/embeddings/GoogleNews-vectors-negative300.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "initializer": [
      [".*linear_layers.*weight",
        {
          "type": "xavier_normal",
        }
      ]
     ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "num_tokens"]],
    "batch_size": 50
  },
  "trainer": {
    "num_epochs": 20,
    "cuda_device": 2,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 1e-4

    }
  }
}